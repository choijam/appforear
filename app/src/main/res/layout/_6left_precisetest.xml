<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500kHz"
        android:textSize="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="300dp"></TextView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="130dp"
        android:background="@drawable/canhear"/>
    <ImageButton
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/lefthear"
        android:background="@drawable/leftear_click"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="420dp"
        android:background="@drawable/cannothear"/>
    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/leftunhear"
        android:background="@drawable/noleftear_click"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="400dp"
        android:onClick="onClick"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="700dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/one_talkbubble"
        android:text="20dB"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:onClick="onClick"
        android:id="@+id/db20_1000"
        android:shadowColor="#5D5D5D"
        android:shadowRadius="1.0"
        android:shadowDx="2"
        android:shadowDy="2"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="700dp"
        android:layout_marginLeft="400dp"
        android:background="@drawable/two_talkbubble"
        android:text="40dB"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:onClick="onClick"
        android:id="@+id/db40_1000"
        android:shadowColor="#5D5D5D"
        android:shadowRadius="1.0"
        android:shadowDx="2"
        android:shadowDy="2"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="850dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/three_talkbubble"
        android:text="60dB"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:onClick="onClick"
        android:id="@+id/db60_1000"
        android:shadowColor="#5D5D5D"
        android:shadowRadius="1.0"
        android:shadowDx="2"
        android:shadowDy="2"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="850dp"
        android:layout_marginLeft="400dp"
        android:background="@drawable/four_talkbubble"
        android:text="80dB"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:onClick="onClick"
        android:id="@+id/db80_1000"
        android:shadowColor="#5D5D5D"
        android:shadowRadius="1.0"
        android:shadowDx="2"
        android:shadowDy="2"/>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="500dp"
        android:indeterminate="false" />
</FrameLayout>